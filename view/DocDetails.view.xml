<mvc:View
	controllerName="view.DocDetails"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="documentDetails"
		title="{/name}"
		enableScrolling="false" 
	        showHeader="true"
		showNavButton="{device>/isPhone}"
		navButtonPress="onPressBack"
		showFooter="{device>/isNoPhone}" >
		<headerContent>
		</headerContent>
		<content>
		<Bar>
			<contentMiddle>
			  <Label text="{/type}" class="sapUiSmallMarginBottom" />
			</contentMiddle>
			<contentRight>
			  <Button id="showDocButton" type="Accept" text="WyÅ›wietl" press="onDocPress" />
			</contentRight>
		</Bar>
		<Carousel id="docImages"
			      class="sapUiContentPadding"
			      loop="true" >
			<pages>
			</pages>		
		</Carousel>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>