<mvc:View
	controllerName="view.Welcome"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout" >
	<Page
	id="welcomePage"
	showHeader="true"
	enableScrolling="false" >
        <Title id="headerUser" level="H3" class="sapUiSmallMargin"/>
        <l:Grid
           hSpacing="2"
           defaultSpan="L10 M10 S10" >
            <l:content>
            <Text id="text1" class="sapUiSmallMargin" />
            <Text id="text2" class="sapUiSmallMargin" />
            <Text id="text3" class="sapUiSmallMargin" />
            </l:content>
        </l:Grid>
	<footer visible="{device>/isNoTouch}">
		<Toolbar>
			<ToolbarSpacer/>
				
		</Toolbar>
	</footer>
	</Page>
</mvc:View>